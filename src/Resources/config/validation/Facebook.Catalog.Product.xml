<?xml version="1.0" encoding="UTF-8"?>

<!--
    See validation specifications in the product data specfication:
    https://support.google.com/merchants/answer/7052112?hl=en
-->
<constraint-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Setono\SyliusFeedPlugin\Feed\Model\Facebook\Catalog\Product">
        <!-- Required properties -->
        <property name="id">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.id.not_blank</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">50</option>
                <option name="minMessage">setono_sylius_feed.facebook.catalog.product.id.length_min</option>
                <option name="maxMessage">setono_sylius_feed.facebook.catalog.product.id.length_max</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
        </property>
        <property name="title">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.title.not_blank</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">150</option>
                <option name="minMessage">setono_sylius_feed.facebook.catalog.product.title.length_min</option>
                <option name="maxMessage">setono_sylius_feed.facebook.catalog.product.title.length_max</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
        </property>
        <property name="link">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.link.not_blank</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
        </property>
        <property name="imageLink">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.image_link.not_blank</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
        </property>
        <property name="availability">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.availability.not_blank</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
        </property>
        <property name="price">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.price.not_blank</option>
                <option name="payload">
                    <value key="severity">error</value>
                </option>
            </constraint>
        </property>

        <!-- Required in some (or most) cases -->
        <property name="description">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.description.not_blank</option>
                <option name="payload">
                    <value key="severity">warning</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">1</option>
                <option name="max">5000</option>
                <option name="minMessage">setono_sylius_feed.facebook.catalog.product.description.length_min</option>
                <option name="maxMessage">setono_sylius_feed.facebook.catalog.product.description.length_max</option>
                <option name="payload">
                    <value key="severity">warning</value>
                </option>
            </constraint>
        </property>
        <property name="brand">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.brand.not_blank</option>
                <option name="payload">
                    <value key="severity">warning</value>
                </option>
            </constraint>
        </property>
        <property name="gtin">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.gtin.not_blank</option>
                <option name="payload">
                    <value key="severity">warning</value>
                </option>
            </constraint>
        </property>

        <!-- Not required, but best practice -->
        <property name="condition">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.condition.not_blank</option>
                <option name="payload">
                    <value key="severity">warning</value>
                </option>
            </constraint>
        </property>
        <property name="itemGroupId">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.item_group_id.not_blank</option>
                <option name="payload">
                    <value key="severity">warning</value>
                </option>
            </constraint>
        </property>
        <property name="shipping">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_feed.facebook.catalog.product.shipping.not_blank</option>
                <option name="payload">
                    <value key="severity">warning</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
