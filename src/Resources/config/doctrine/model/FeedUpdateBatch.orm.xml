<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Setono\SyliusFeedPlugin\Model\FeedUpdateBatch" table="setono_sylius_feed__feed_update_batch">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="version" type="integer" version="true"/>

        <field name="entity" type="string"/>
        <field name="ids" type="json"/>
        <field name="state" type="string"/>
        <field name="path" type="string" nullable="true"/>
        <field name="startedAt" type="datetime" nullable="true"/>
        <field name="completedAt" type="datetime" nullable="true"/>
        <field name="failedAt" type="datetime" nullable="true"/>
        <field name="error" type="text" nullable="true"/>

        <many-to-one field="feedUpdate" target-entity="Setono\SyliusFeedPlugin\Model\FeedUpdateInterface" fetch="EAGER">
            <join-column name="feed_update_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
