<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Setono\SyliusFeedPlugin\Model\FeedScope" table="setono_sylius_feed__feed_scope">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="localeCode" type="string" nullable="true"/>
        <field name="currencyCode" type="string" nullable="true"/>

        <many-to-one field="channel" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-column name="channel_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one field="feed" target-entity="Setono\SyliusFeedPlugin\Model\FeedInterface" inversed-by="scopes">
            <join-column name="feed_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
