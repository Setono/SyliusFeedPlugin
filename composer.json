{
    "name": "setono/sylius-feed-plugin",
    "description": "Plugin to generate feeds within the Sylius ecommerce platform",
    "license": "MIT",
    "type": "symfony-bundle",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "doctrine/collections": "^1.6",
        "doctrine/orm": "^2.7",
        "doctrine/persistence": "^1.3 || ^2.1",
        "knplabs/knp-menu": "^3.1",
        "league/flysystem": "^1.1",
        "league/flysystem-bundle": "^1.1",
        "liip/imagine-bundle": "^2.4",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.1",
        "setono/doctrine-orm-batcher": "^0.6",
        "setono/doctrine-orm-batcher-bundle": "^0.4",
        "spatie/enum": "^3.7",
        "sylius/resource-bundle": "^1.6",
        "symfony/config": "^4.4 || ^5.4",
        "symfony/console": "^4.4 || ^5.4",
        "symfony/dependency-injection": "^4.4 || ^5.4",
        "symfony/event-dispatcher": "^4.4 || ^5.4",
        "symfony/event-dispatcher-contracts": "^1.1 || ^2.2",
        "symfony/form": "^4.4 || ^5.4",
        "symfony/http-foundation": "^4.4 || ^5.4.7",
        "symfony/http-kernel": "^4.4 || ^5.4",
        "symfony/messenger": "^4.4 || ^5.4",
        "symfony/mime": "^4.4 || ^5.4",
        "symfony/options-resolver": "^4.4 || ^5.4",
        "symfony/routing": "^4.4 || ^5.4",
        "symfony/serializer": "^4.4 || ^5.4",
        "symfony/translation-contracts": "^1.1 || ^2.3",
        "symfony/uid": "^5.4",
        "symfony/validator": "^4.4 || ^5.4",
        "symfony/workflow": "^4.4 || ^5.4",
        "twig/twig": "^2.14",
        "webmozart/assert": "^1.1"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.1",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "sylius/sylius": "^1.10",
        "symfony/debug-bundle": "^5.1",
        "symfony/dotenv": "^5.2",
        "symfony/intl": "^4.4 || ^5.0",
        "symfony/web-profiler-bundle": "^5.0"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusFeedPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusFeedPlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:oxyshop/DoctrineORMBatcherBundle.git"
        }
    ],
    "prefer-stable": true,
    "scripts": {
        "analyse": "phpstan analyse",
        "check-style": "ecs check src/ spec/ tests/",
        "fix-style": "ecs check src/ spec/ tests/ --fix",
        "phpspec": "phpspec run",
        "phpunit": "phpunit",
        "test": [
            "@phpunit",
            "@phpspec"
        ]
    }
}
