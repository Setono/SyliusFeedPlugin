{
    "name": "setono/sylius-feed-plugin",
    "description": "Plugin to generate feeds within the Sylius ecommerce platform",
    "license": "MIT",
    "type": "sylius-plugin",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "doctrine/collections": "^1.6",
        "doctrine/orm": "^2.7",
        "doctrine/persistence": "^1.3 || ^2.0 || ^3.0",
        "knplabs/knp-menu": "^3.1",
        "league/flysystem": "^1.1 || ^2.1",
        "league/flysystem-bundle": "^1.1 || ^2.4",
        "liip/imagine-bundle": "^2.4",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "setono/doctrine-orm-batcher": "^0.6",
        "setono/doctrine-orm-batcher-bundle": "^0.3.4",
        "spatie/enum": "^3.7",
        "sylius/channel": "^1.0",
        "sylius/channel-bundle": "^1.0",
        "sylius/core": "^1.0",
        "sylius/core-bundle": "^1.0",
        "sylius/inventory": "^1.0",
        "sylius/locale": "^1.0",
        "sylius/resource-bundle": "^1.6",
        "sylius/ui-bundle": "^1.0",
        "symfony/config": "^6.4 || ^7.4",
        "symfony/console": "^6.4 || ^7.4",
        "symfony/dependency-injection": "^6.4 || ^7.4",
        "symfony/event-dispatcher": "^6.4 || ^7.4",
        "symfony/event-dispatcher-contracts": "^1.1 || ^2.2 || ^3.0",
        "symfony/form": "^6.4 || ^7.4",
        "symfony/http-foundation": "^6.4 || ^7.4",
        "symfony/http-kernel": "^6.4 || ^7.4",
        "symfony/messenger": "^6.4 || ^7.4",
        "symfony/mime": "^6.4 || ^7.4",
        "symfony/options-resolver": "^6.4 || ^7.4",
        "symfony/routing": "^6.4 || ^7.4",
        "symfony/serializer": "^6.4 || ^7.4",
        "symfony/translation-contracts": "^1.1 || ^2.3 || ^3.0",
        "symfony/uid": "^6.4 || ^7.4",
        "symfony/validator": "^6.4 || ^7.4",
        "symfony/workflow": "^6.4 || ^7.4",
        "twig/twig": "^2.14 || ^3.0",
        "webmozart/assert": "^1.1"
    },
    "require-dev": {
        "api-platform/core": "^2.7.16",
        "babdev/pagerfanta-bundle": "^3.8",
        "behat/behat": "^3.14",
        "doctrine/doctrine-bundle": "^2.11",
        "jms/serializer-bundle": "^4.2",
        "lexik/jwt-authentication-bundle": "^2.17",
        "setono/sylius-plugin-pack": "~1.14.2",
        "sylius-labs/polyfill-symfony-security": "^1.1.2",
        "symfony/debug-bundle": "^6.4 || ^7.4",
        "symfony/dotenv": "^6.4 || ^7.4",
        "symfony/intl": "^6.4 || ^7.4",
        "symfony/property-info": "^6.4 || ^7.4",
        "symfony/web-profiler-bundle": "^6.4 || ^7.4",
        "symfony/webpack-encore-bundle": "^1.17.2",
        "willdurand/negotiation": "^3.1"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\SyliusFeedPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\SyliusFeedPlugin\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpstan/extension-installer": true,
            "symfony/thanks": false
        },
        "audit": {
            "block-insecure": false
        },
        "sort-packages": true
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "check-style": "ecs check",
        "fix-style": "ecs check --fix",
        "phpunit": "phpunit"
    }
}
